<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:background="@drawable/rounded_rect_grey"
    android:padding="16dp">

    <View
        android:id="@+id/message_dot"
        android:layout_width="16sp"
        android:layout_height="16sp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6sp"
        android:background="@drawable/circle_black"
        tools:backgroundTint="@color/state_good" />

    <TextView
        android:id="@+id/message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/message_dot"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:fontName="@string/font_light"
        tools:ignore="MissingPrefix"
        tools:text="@sample/tools:lorem" />

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_alignStart="@id/message_title"
        android:layout_below="@id/message_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="@sample/tools:lorem" />

    <TextView
        android:id="@+id/message_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/message_body"
        android:layout_below="@id/message_body"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:text="@sample/tools:lorem" />

</RelativeLayout>
